<% @quizzes.each do |quiz|%>
  <div class="card mb-3">
    <div class="row no-gutters align-items-center">
      <div class="col-md-2">
        <img src="<%= quiz.image %>" class="card-img" alt="...">
      </div>
      <div class="col-md-10">
        <div class="card-body">
          <h5 class="card-title"><%= quiz.title %></h5>
          <p class="card-text"><%= quiz.description %></p>
          <p class="card-text"><small class="text-muted"><%= quiz.created_at %></small></p>
          <%# <input class="btn btn-primary" type="submit" value="クイズをトク"> %>
          <%= link_to 'クイズをトク', quiz_path(quiz.id), class: "btn btn-primary" %>
          <% if user_signed_in? && current_user == @quiz.user.id%>
            <%= link_to '編集', quiz_path(quiz.id), class: "btn btn-primary" %>
            <%= link_to '削除', quiz_path(quiz.id), method: :delete, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>